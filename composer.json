{
    "name": "iamfarhad/validation",
    "description": "laravel persian validation package",
    "license": "MIT",
    "keywords": [
        "laravel",
        "validation",
        "validator",
        "persian",
        "farsi",
        "iran",
        "lumen",
        "custom",
        "rule"
    ],
    "authors": [
        {
            "name": "Farhad Zand",
            "email": "farhad.pd@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/support": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Iamfarhad\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iamfarhad\\Validation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iamfarhad\\Validation\\ValidationServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
